{
  "name": "strapi-railway-framework",
  "private": true,
  "version": "1.0.0",
  "description": "Full-stack Strapi + Next.js framework optimized for Railway deployment with SendGrid integration",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "test": "turbo test",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo build --filter=./packages/* && changeset publish",
    "railway:backend": "cd apps/backend && npm run develop",
    "railway:frontend": "cd apps/frontend && npm run dev",
    "railway:build": "turbo build --filter=./apps/*"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@turbo/gen": "^1.13.4",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "turbo": "^1.13.4",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@10.7.0"
}