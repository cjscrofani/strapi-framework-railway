{
  "collectionName": "components_shared_buttons",
  "info": {
    "displayName": "Button",
    "description": "Reusable button component"
  },
  "options": {},
  "attributes": {
    "text": {
      "type": "string",
      "required": true
    },
    "url": {
      "type": "string"
    },
    "isExternal": {
      "type": "boolean",
      "default": false
    },
    "variant": {
      "type": "enumeration",
      "enum": ["primary", "secondary", "outline", "ghost"],
      "default": "primary"
    },
    "size": {
      "type": "enumeration",
      "enum": ["sm", "md", "lg"],
      "default": "md"
    },
    "icon": {
      "type": "string"
    },
    "iconPosition": {
      "type": "enumeration",
      "enum": ["left", "right"],
      "default": "left"
    }
  }
}