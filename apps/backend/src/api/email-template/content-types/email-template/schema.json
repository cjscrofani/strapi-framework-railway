{
  "kind": "collectionType",
  "collectionName": "email_templates",
  "info": {
    "singularName": "email-template",
    "pluralName": "email-templates",
    "displayName": "Email Template",
    "description": "Manage email templates for transactional and marketing emails"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "category": {
      "type": "enumeration",
      "enum": ["transactional", "marketing", "system", "newsletter"],
      "required": true
    },
    "subject": {
      "type": "string",
      "required": true
    },
    "htmlContent": {
      "type": "richtext",
      "required": true
    },
    "textContent": {
      "type": "text"
    },
    "preheader": {
      "type": "string",
      "maxLength": 150
    },
    "variables": {
      "type": "json"
    },
    "sendgridTemplateId": {
      "type": "string"
    },
    "isDefault": {
      "type": "boolean",
      "default": false
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "tags": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::tag.tag",
      "inversedBy": "emailTemplates"
    },
    "thumbnailImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "lastUsed": {
      "type": "datetime"
    },
    "usageCount": {
      "type": "integer",
      "default": 0
    },
    "clickThroughRate": {
      "type": "decimal",
      "default": 0
    },
    "openRate": {
      "type": "decimal",
      "default": 0
    },
    "testRecipients": {
      "type": "json"
    },
    "metadata": {
      "type": "json"
    }
  }
}